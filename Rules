#!/usr/bin/env ruby

# A few helpful tips about the Rules file:
#
# * The order of rules is important: for each item, only the first matching
#   rule is applied.
#
# * Item identifiers start and end with a slash (e.g. “/about/” for the file
#   “content/about.html”). To select all children, grandchildren, … of an
#   item, use the pattern “/about/*/”; “/about/*” will also select the parent,
#   because “*” matches zero or more characters.

require 'compass'

Compass.add_project_configuration('compass_config.rb')

#compile '/stylesheet/' do
#  # don’t filter or layout
#end
#compile '/assets/style/*/' do
#  filter :sass
#end

compile '/assets/style/_*/' do
  # Don’t compile partials
end

compile '/assets/style/*/' do
  filter :sass, Compass.sass_engine_options
  filter :relativize_paths, :type => :css
  #filter :rainpress
end

compile '/static/*' do
end

compile '/*' do
  filter :haml
  layout 'default'
end

compile '/photos/*/' do
  filter :haml
  layout 'default'

  item.identifier + 'index.html'
end

#compile '/*' do
#  filter :haml
#  layout 'default'
#end

route '/assets/style/*/' do
  item.identifier.chop + '.css' # so that the /assets/style/screen/ item is compiled to /assets/style/screen.css
end

route '*' do
  item.identifier + 'index.html'
end

### Layouting ################################################################

layout '/default/', :haml, :format => :html5, :ugly => true

layout '*', :haml

